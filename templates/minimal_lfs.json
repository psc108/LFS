{
  "name": "Minimal LFS",
  "description": "Basic LFS build with essential packages only",
  "category": "minimal",
  "config": {
    "name": "Minimal Linux From Scratch",
    "version": "12.4",
    "target_arch": "x86_64",
    "optimization": "size",
    "packages": [
      "essential"
    ],
    "stages": [
      {
        "name": "prepare_host",
        "order": 1,
        "command": "bash scripts/prepare_host.sh"
      },
      {
        "name": "download_sources",
        "order": 2,
        "command": "bash scripts/download_minimal.sh"
      },
      {
        "name": "build_toolchain",
        "order": 3,
        "command": "bash scripts/build_toolchain.sh"
      },
      {
        "name": "build_system",
        "order": 4,
        "command": "bash scripts/build_minimal_system.sh"
      },
      {
        "name": "configure_system",
        "order": 5,
        "command": "bash scripts/configure_minimal.sh"
      },
      {
        "name": "build_kernel",
        "order": 6,
        "command": "bash scripts/build_kernel_minimal.sh"
      },
      {
        "name": "install_bootloader",
        "order": 7,
        "command": "bash scripts/install_bootloader.sh"
      }
    ]
  }
}